---
//src/layouts/BaseLayout.astro
const {title = "Welcome", children} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body style="font-family: sans-serif; margin: 2rem;">
    <header>
      <h1><a href="/">Alejandro Garcia</a></h1>
    </header>

    <main>
      {children}
    </main>

    <footer style="margin-top: 4rem; font-size: 0.9rem;">
      <p>© {new Date().getFullYear()} Alejandro Garcia — Built with Astro</p>
    </footer>
  </body>
</html>